{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "experimentalDecorators": true,
    "baseUrl": "",
    "stripInternal": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "sourceMap": true,
    "inlineSources": true,
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "files": [
    "src/index.ts"
  ],
  "exclude": [
    "demo/**/*"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "genDir": "./dist/",
    "skipTemplateCodegen": true,
    "debug": true
  }
}